<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- "Production" config for Dylan web playground.
     See http/server/config/config.xml for documentation. -->

<http-server>

  <server root="/dylan"
          working-directory="/dylan/web-playground"
          debug="no"
          use-default-virtual-host="yes"
          />

  <listener address="0.0.0.0" port="3600" ssl="no"/>

  <dsp reparse-templates="no" />

  <debug-log
      name="http.server"
      location="logs/http-server.log"
      level="trace" />

  <error-log
      name="http.server.debug"
      additive="yes" />

  <request-log
      name="http.server.requests"
      additive="no"
      location="logs/request.log"
      max-size="20000000" />

</http-server>
