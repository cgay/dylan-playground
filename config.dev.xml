<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- assumes current directory is the one containing _build and web-playground -->

<http-server>

  <server server-root="/home/cgay/dylan/workspaces/playground/dev"
          debug="yes"
          use-default-virtual-host="yes"
          />

  <listener address="0.0.0.0" port="3600" ssl="no"/>

  <dsp reparse-templates="yes" />

  <debug-log
      name="http.server"
      level="trace"
      location="server.log"
      />

  <error-log
      name="http.server.debug"
      additive="yes" />

  <request-log
      name="http.server.requests"
      additive="yes" />

  <!-- root-directory is relative to server-root (above). -->
  <dylan-web-playground
      root-directory="."
      />

</http-server>
