<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- dev config logs to stdout and uses the dev/ subdirectory. -->

<http-server>

  <server server-root="/home/cgay/dylan/workspaces/playground/dev"
          debug="yes"
          use-default-virtual-host="yes"
          />

  <listener address="0.0.0.0" port="3600" ssl="no"/>

  <dsp reparse-templates="yes" />

  <!-- Log to stdout by default. Add location="server.log" if desired. -->
  <debug-log
      name="http.server"
      level="trace"
      />

  <error-log
      name="http.server.debug"
      additive="yes" />

  <request-log
      name="http.server.requests"
      additive="yes" />

  <dylan-web-playground
      root-directory="/home/cgay/dylan/workspaces/playground/dev"
      template-directory="/home/cgay/dylan/workspaces/playground/web-playground"
      />

</http-server>
